<div class="container">

<header>
  <div class="jumbotron">
    <h1 class="display-4">@realNewYorkTimes</h1>
  </div>
</header>
<section class="row">
  {{#each article}}
  <div class="card col-12 mb-4 border-light">
  <article class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{byline}}</h6>
    <p class="card-text">{{summary}}</p>
    <button type="button" class="btn btn-primary notes" data-toggle="modal" data-target="#modalNotes" data-id="{{_id}}">Notes</button> 
    <a href="{{link}}" class="card-link" target="_blank">Read</a>
  </article>
  </div>
  {{/each}}
</section>
{{> modal}}
</div>

